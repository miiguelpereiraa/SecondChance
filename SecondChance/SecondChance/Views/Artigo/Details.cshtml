@model SecondChance.Models.Artigo

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Artigo</h4>
    <hr />
    @* Slider de imagens *@
    <div class="container" style="width:500px;">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                @{ int i = 0;}
                @foreach (var item in Model.ListaRecMultimedia.Skip(1))
                {
                    <li data-target="#myCarousel" data-slide-to="@i+1"></li>
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                @foreach (var item in Model.ListaRecMultimedia)
                {
                    if (@item.Designacao == Model.ListaRecMultimedia.FirstOrDefault().Designacao)
                    {

                        <div class="item active">
                            <img src="~/Imagens/@item.Designacao" alt="Image" width="500" />
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <img src="~/Imagens/@item.Designacao" alt="Image" width="500" />
                        </div>
                    }
                }

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categoria.Designacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.Designacao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Dono.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dono.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contacto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contacto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Preco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preco) €
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>
</div>
<p>
    @if (User.Identity.Name == Model.Dono.UsernameID) {
        @Html.ActionLink("Editar", "Edit", new { id = Model.IdArtigo }) 
        <text> | </text>
        @Html.ActionLink("Voltar", "Index");
        }
    else {@Html.ActionLink("Voltar", "Index")}


</p>
