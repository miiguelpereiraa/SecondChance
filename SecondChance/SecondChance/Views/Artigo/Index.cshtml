@model IEnumerable<SecondChance.Models.Artigo>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Artigos</h2>

<p>
    @if (User.IsInRole("Utilizador"))
    {
        @Html.ActionLink("Inserir Artigo", "Create")
    }
</p>

@using (Html.BeginForm())
{
    <p>
        Pesquisar Artigo: @Html.TextBox("searchString")
        <input type="submit" value="Pesquisar" />
    </p>
}

<table class="table">
    <tr>
        <th>
           
        </th>
        <th>
            @Html.ActionLink("Categoria", "Index", new { sortOrder = ViewBag.ordenarCategoria })
            @*@Html.DisplayNameFor(model => model.Categoria.Designacao)*@
        </th>
        <th>
            @Html.ActionLink("Nome do Utilizador", "Index", new { sortOrder = ViewBag.ordenarNome })
            @*@Html.DisplayNameFor(model => model.Dono.Nome)*@
        </th>
        <th>
            @Html.ActionLink("Título", "Index", new { sortOrder = ViewBag.ordenarTitulo})
            @*@Html.DisplayNameFor(model => model.Titulo)*@
        </th>
        <th>
            @Html.ActionLink("Preço", "Index", new { sortOrder = ViewBag.ordenarPreco })
            @*@Html.DisplayNameFor(model => model.Preco)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Imagens/@item.ListaRecMultimedia.First().Designacao" alt="Image" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Designacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dono.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco) €
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @if (User.IsInRole("Utilizador"))
            {
                if (User.Identity.Name == item.Dono.UsernameID)
                {
                    <text>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdArtigo }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdArtigo }) |
                    </text>
                }
                <text>
                    @Html.ActionLink("Details", "Details", new { id = item.IdArtigo })
                </text>

            }
        </td>
    </tr>
}

</table>
